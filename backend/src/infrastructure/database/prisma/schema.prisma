generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL_DEV")
}

model User {
    id            String         @id @default(uuid())
    name          String
    email         String         @unique
    password      String
    type          UserType
    access        Access         @default(ativo)
    farmId        String?        @map("farm_id") // opcional (user:)
    farm          Farm?          @relation(fields: [farmId], references: [id], onDelete: SetNull)
    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
    refreshTokens RefreshToken[]
    Image4K       Image4K[]

    @@map("users")
}

model Farm {
    id        String    @id @default(uuid())
    name      String
    city      String
    state     String
    latitude  Decimal   @db.Decimal(20, 15)
    longitude Decimal   @db.Decimal(21, 15)
    license   String    @unique
    users     User[] // Uma fazenda tem vários usuários
    feedlots  Feedlot[]
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt

    @@map("farms")
}


model RefreshToken {
    id        String   @id @default(uuid())
    token     String   @unique
    userId    String   @map("user_id")
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
    expiresAt DateTime

    @@map("refresh_tokens")
}

enum UserType {
    admin
    dev
    client
}

enum Access {
    ativo
    negado
}

enum StatusRequest {
    COMPLETED
    PROCESSING
    FAILED
}
