{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node16",

    "rootDir": "./src",
    "outDir": "./public",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "plugin/server.ts"],
  "exclude": ["node_modules"]
}
