{
	"compilerOptions": {
		"typeRoots": [
			"./src/@types",
			"./node_modules/@types"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES2020",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"baseUrl": "./src", // base para imports absolutos
		"paths": {
			"*": [
				"*"
			] // permite 'infra/...'
		}
	},
	"include": [
		"src",
		"tests"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}